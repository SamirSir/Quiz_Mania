<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"> 
    <%= form.label :phrase %>
    <%= form.text_field :phrase %>
  </div>

  <div class="field">
    <div class="alert alert-primary " style="width:40%">Please seperate the options by comma(,) with no space</div>
    <%= form.label :options %>
    <%= form.text_field :options %>
  </div>

  <div class="field">
    <div class="alert alert-primary " style="width:40%">Correct answer should match case also</div>
    <%= form.label :answer %>
    <%= form.text_field :answer %>
  </div>
    


  <div class="field">
    <%= form.label :subject_id %>
    <%= form.select :subject_id, options_for_select(@subjects) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
